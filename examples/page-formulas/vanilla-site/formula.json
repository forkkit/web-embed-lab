{
	"comment": "A page formula that demonstrates core features by serving a vanilla JS site",

	"routes": [
		{
			"comment": "Route to a go template",
			"type": 1,
			"id": "123",
			"path": "^$",
			"value": "index.html",
			"parameters": {
				"moon": "unit-zappa"
			}
		},
		{
			"comment": "Route to a Javascript service object",
			"type": 2,
			"id": "456",
			"path": "^service\\/random-words$",
			"value": "RandomWordsService",
			"parameters": {
				"max-words": "15"
			}
		},
		{
			"comment": "Route to mocked image service",
			"type": 3,
			"id": "789",
			"path": "^bar\\/flower.jpg$",
			"value": "mock/image/200x400.jpg"
		},
		{
			"comment": "Route to a static blob",
			"type": 4,
			"id": "101112", 
			"path": "^foo\\/bing-bong.png$",
			"value": "files/ABC-123",
			"headers": {
				"Content-Type": "image/png"
			}
		}
	],

	"template-data": {
		"title": "Vanilla"
	},

	"probe-bases": {
		"dom-shape": {
			"depth": 20,
			"width": 45
		},
		"uncaught-exception": 3,
		"selector": {
			".main-component > .success-message:first-child": 1,
			".footer h2.a": 6
		}
	}
}